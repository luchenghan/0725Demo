<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/regbackground">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <!--<android.support.v7.widget.Toolbar-->
            <!--android:id="@+id/toolbar"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--app:popupTheme="@style/AppTheme.PopupOverlay" />-->

    </android.support.design.widget.AppBarLayout>

    <EditText
        android:id="@+id/et_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:background="#FFFFFF"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_below="@+id/et_name"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"/>

    <EditText
        android:id="@+id/et_id"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_below="@+id/et_password"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"/>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:layout_below="@+id/et_id"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"/>

    <EditText
        android:id="@+id/et_gender"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_below="@id/et_email"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"/>

    <EditText
        android:id="@+id/et_age"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_below="@+id/et_gender"
        android:ems="10"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"/>

    <EditText
        android:id="@+id/et_academic"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_name"
        android:layout_below="@+id/et_age"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF"/>

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:layout_alignEnd="@+id/et_password"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/btnoutput"
        android:onClick="OnReg"
        android:layout_alignRight="@+id/et_password" />

    <TextView
        android:id="@+id/txtAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_name"
        android:layout_toLeftOf="@+id/et_name"
        android:layout_toStartOf="@+id/et_name"
        android:text="帳號 : "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtOldPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_password"
        android:layout_below="@id/txtAccount"
        android:layout_toLeftOf="@+id/et_name"
        android:layout_toStartOf="@+id/et_name"
        android:text="密碼 : "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtOldPassword"
        android:layout_centerVertical="true"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/et_name"
        android:layout_toStartOf="@+id/et_name"
        android:text="姓名 : "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_email"
        android:layout_below="@id/Name"
        android:layout_toLeftOf="@+id/et_name"
        android:layout_toStartOf="@+id/et_name"
        android:text="信箱 : "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_gender"
        android:layout_below="@id/txtEmail"
        android:layout_toLeftOf="@+id/et_name"
        android:layout_toStartOf="@+id/et_name"
        android:text="性別 : "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/Gender"
        android:layout_marginBottom="134dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/et_name"
        android:layout_toStartOf="@+id/et_name"
        android:text="年齡 : "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtAcadamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/et_academic"
        android:layout_below="@id/Age"
        android:layout_toLeftOf="@+id/et_name"
        android:layout_toStartOf="@+id/et_name"
        android:text="學歷 : "
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnCheck"
        android:layout_width="140dp"
        android:layout_height="80dp"
        android:layout_alignBaseline="@+id/et_name"
        android:background="@drawable/btncheck"
        android:layout_marginTop="575dp"
        android:layout_marginLeft="280dp"
        />

</RelativeLayout>