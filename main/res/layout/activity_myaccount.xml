<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Myaccount">


    <TextView
        android:id="@+id/MyAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="71dp"
        android:text="帳號  :"
        android:textSize="25dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="41dp" />

    <TextView
        android:id="@+id/txtMyAccount"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/MyAccount"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="65dp"
        android:textSize="25dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="65dp" />

    <TextView
        android:id="@+id/Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MyAccount"
        android:layout_below="@+id/MyAccount"
        android:text="姓名  :"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/MyAccount"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/Name"
        android:layout_alignStart="@+id/txtMyAccount"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/txtMyAccount" />

    <TextView
        android:id="@+id/Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MyAccount"
        android:layout_below="@+id/Name"
        android:text="性別  :"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/MyAccount"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txtGender"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/Gender"
        android:layout_alignStart="@+id/txtMyAccount"
        android:layout_alignLeft="@+id/txtMyAccount" />

    <TextView
        android:id="@+id/Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MyAccount"
        android:layout_below="@+id/Gender"
        android:text="年紀  :"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/MyAccount"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txtAge"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/Age"
        android:layout_alignStart="@+id/txtMyAccount"
        android:layout_alignLeft="@+id/txtMyAccount" />

    <TextView
        android:id="@+id/Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MyAccount"
        android:layout_below="@+id/Age"
        android:text="信箱  :"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/MyAccount"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txyEmail"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/Email"
        android:layout_alignStart="@+id/txtMyAccount"
        android:layout_alignLeft="@+id/txtMyAccount" />

    <TextView
        android:id="@+id/Acadamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/MyAccount"
        android:layout_below="@+id/Email"
        android:text="學歷  :"
        android:textSize="25dp"
        android:layout_alignLeft="@+id/MyAccount"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/txtAcadamic"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/Acadamic"
        android:layout_alignStart="@+id/txtMyAccount"
        android:layout_alignLeft="@+id/txtMyAccount" />

    <Button
        android:id="@+id/btnPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="39dp"
        android:layout_marginStart="32dp"
        android:text="修改密碼"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="32dp" />

    <Button
        android:id="@+id/btnData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/btnPassword"
        android:layout_marginEnd="32dp"
        android:text="修改資料"
        android:layout_alignParentRight="true"
        android:layout_marginRight="32dp" />

</RelativeLayout>